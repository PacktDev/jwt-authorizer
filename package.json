  "scripts": {
    "build": "babel src -d dist",
    "test": "npm run lint && npm run unit && npm run coverage",
    "lint": "eslint ./src",
    "coverage": "nyc --check-coverage true npm run unit",
    "unit": "./node_modules/.bin/mocha ---require @babel/register -- tests/*.js",
    "prepublishOnly": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:packt-internal/jwt-authorizer.git"
  },
  "author": {
    "name": "Packt Publishing Ltd",
    "url": "https://www.packtpub.com/"
  },
  "contributors": [
    {
      "name": "Chris Key",
      "email": "chrisk@packtpub.com"
    },
    {
      "name": "Abhishek Pal",
      "email": "abhishekp@packtpub.com"
    },
    {
      "name": "Michael Copeland",
      "email": "michael.copeland@freakout.tech"
    }
  ],
  "license": "Apache-2.0",
  "homepage": "https://bitbucket.org/packt-internal/jwt-authorizer",
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.1",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.0",
    "@istanbuljs/nyc-config-babel": "^2.1.1",
    "babel-plugin-istanbul": "^5.2.0",
    "chai": "4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bytes": "0.1.2",
    "eslint": "6.7.2",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2",
    "mocha": "6.2.2",
    "mocha-bamboo-reporter": "1.1.2",
    "node-rsa": "1.0.7",
    "nyc": "^14.1.1",
    "sinon": "7.5.0",
    "uuid": "3.3.3"
  },
  "dependencies": {
    "@packt/error-custom": "^1.0.2",
    "@hapi/joi": "^15.0.0",
    "jsonwebtoken": "8.5.1",
    "jwt-decode": "2.2.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-babel",

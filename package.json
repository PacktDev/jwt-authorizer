{
  "name": "jwt-authorizer",
  "version": "1.0.0",
  "description": "Module to manage JWT claims-based authentication with permissions.",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "webpack",
    "test": "npm run lint && npm run unit && npm run coverage",
    "lint": "eslint ./src",
    "coverage": "babel-node ./node_modules/babel-istanbul/lib/cli.js check-coverage --statements 95 --functions 95 --branches 95 --lines 95",
    "unit": "babel-node ./node_modules/babel-istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha -- tests/*.js",
    "prepublishOnly": "npm run test && npm run build"
  },
  "author": "Chris Key",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-istanbul": "0.12.2",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.7.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "cross-env": "5.1.5",
    "dotenv": "5.0.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.11.0",
    "file-loader": "1.1.11",
    "istanbul": "0.4.5",
    "mocha": "5.1.1",
    "mocha-bamboo-reporter": "1.1.1",
    "newman": "3.9.3",
    "node-rsa": "1.0.0",
    "sinon": "4.5.0",
    "webpack": "4.6.0",
    "webpack-cli": "2.1.4"
  },
  "dependencies": {
    "jsonwebtoken": "8.2.1"
  }
}
